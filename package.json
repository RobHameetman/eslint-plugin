{
  "name": "@rob.hameetman/eslint-plugin",
  "version": "1.0.0-pr.1.78c6beed.20231115.1",
  "description": "ESLint plugin for enterprise-strength TypeScript packages",
  "author": "Robert H. Hameetman (https://www.robhameetman.com/)",
  "homepage": "https://www.npmjs.org/package/@rob.hameetman/eslint-plugin",
  "license": "MIT",
  "type": "commonjs",
  "main": "./index.js",
  "module": "./index.js",
  "typings": "./bin/index.d.js",
  "files": [
    "bin/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/RobHameetman/eslint-plugin"
  },
  "bugs": {
    "url": "https://github.com/RobHameetman/eslint-plugin/issues"
  },
  "scripts": {
    "build": "rm -rf ./bin/ && rollup -c ./rollup.config.js",
    "format": "NODE_ENV=production eslint ./src --ext=ts,tsx --fix",
    "prepare": "husky install",
    "reset": "rm -rf node_modules/ && npm cache clear --force && [[ -f package-lock.json ]] && npm ci || npm i",
    "setup": "sh scripts/setup.sh",
    "test": "NODE_ENV=test jest"
  },
  "dependencies": {
    "@graphql-eslint/eslint-plugin": "3.20.1",
    "@rob.hameetman/type-guards": "1.0.0-alpha.4",
    "@typescript-eslint/eslint-plugin": "6.10.0",
    "@typescript-eslint/parser": "6.10.0",
    "eslint-config-prettier": "9.0.0",
    "eslint-config-standard": "17.1.0",
    "eslint-import-resolver-typescript": "3.6.1",
    "eslint-plugin-cypress": "2.15.1",
    "eslint-plugin-import": "2.29.0",
    "eslint-plugin-jest": "27.6.0",
    "eslint-plugin-jsx-a11y": "6.8.0",
    "eslint-plugin-n": "16.3.0",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "5.0.1",
    "eslint-plugin-promise": "6.1.1",
    "eslint-plugin-react": "7.33.2",
    "eslint-plugin-react-hooks": "4.6.0",
    "eslint-plugin-testing-library": "6.1.2"
  },
  "peerDependencies": {
    "eslint": ">= 8.53.0",
    "prettier": ">= 3.0.0"
  },
  "optionalDependencies": {
    "graphql": ">= 16.8.0",
    "react": ">= 18.0.0"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "18.1.0",
    "@faker-js/faker": "8.2.0",
    "@rbnlffl/rollup-plugin-eslint": "6.0.0",
    "@rob.hameetman/semantic-release-config": "1.0.0-alpha.5",
    "@rollup/plugin-alias": "5.0.1",
    "@rollup/plugin-commonjs": "25.0.7",
    "@rollup/plugin-node-resolve": "15.2.3",
    "@rollup/plugin-terser": "0.4.4",
    "@types/jest": "29.5.7",
    "@types/node": "20.8.10",
    "commitlint": "18.2.0",
    "husky": "8.0.3",
    "jest": "29.7.0",
    "rollup": "4.3.0",
    "rollup-plugin-copy": "3.5.0",
    "rollup-plugin-typescript2": "0.36.0",
    "ts-jest": "29.1.1",
    "ts-loader": "9.5.0",
    "typescript": "5.2.2"
  },
  "bundledDependencies": [
    "@graphql-eslint/eslint-plugin",
    "@typescript-eslint/eslint-plugin",
    "@typescript-eslint/parser",
    "eslint-import-resolver-typescript",
    "eslint-plugin-cypress",
    "eslint-plugin-import",
    "eslint-plugin-jest",
    "eslint-plugin-jsx-a11y",
    "eslint-plugin-n",
    "eslint-plugin-node",
    "eslint-plugin-prettier",
    "eslint-plugin-promise",
    "eslint-plugin-react",
    "eslint-plugin-react-hooks",
    "eslint-plugin-testing-library"
  ],
  "eslintConfig": {
    "extends": [
      "./index.js"
    ],
    "rules": {
      "import/export": "off",
      "sort-imports": "off",
      "sort-keys": "off"
    }
  },
  "eslintIgnore": [
    "bin"
  ],
  "prettier": {
    "arrowParens": "always",
    "semi": true,
    "trailingComma": "all",
    "singleQuote": true,
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": true,
    "endOfLine": "auto"
  },
  "jest": {
    "roots": [
      "<rootDir>/lib"
    ],
    "collectCoverageFrom": [
      "lib/**/*.ts",
      "!lib/**/*.d.ts"
    ],
    "coverageReporters": [
      "text-summary"
    ],
    "moduleFileExtensions": [
      "js",
      "ts",
      "json"
    ],
    "moduleNameMapper": {
      "^@configs/*": "<rootDir>/lib/configs/$1",
      "^@rules/*": "<rootDir>/lib/rules/$1",
      "^@constants/*": "<rootDir>/lib/utils/constants/$1",
      "^@enums/*": "<rootDir>/lib/utils/enums/$1",
      "^@functions/*": "<rootDir>/lib/utils/functions/$1",
      "^@type/*": "<rootDir>/lib/utils/types/$1",
      "^@test/*": "<rootDir>/test/resources/$1"
    },
    "preset": "ts-jest",
    "reporters": [
      "default"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/test/jest/config/setupTests.ts"
    ],
    "testMatch": [
      "<rootDir>/lib/**/*.spec.ts"
    ],
    "transform": {
      "\\.ts$": "ts-jest",
      "^(?!.*\\.(ts|json)$)": "ts-jest"
    }
  },
  "release": {
    "extends": "@rob.hameetman/semantic-release-config/recommended"
  }
}
