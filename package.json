{
  "name": "@rob.hameetman/eslint-plugin",
  "version": "1.0.2",
  "description": "ESLint plugin for enterprise-strength TypeScript packages",
  "author": "Robert H. Hameetman (https://www.robhameetman.com/)",
  "homepage": "https://www.npmjs.org/package/@rob.hameetman/eslint-plugin",
  "license": "MIT",
  "type": "module",
  "main": "./index.cjs",
  "module": "./index.js",
  "typings": "./bin/index.d.js",
  "files": [
    "bin/*",
    "index.js",
    "index.cjs"
  ],
	"engines": {
		"node": ">= 23.5.0",
		"npm": ">= 10.9.2"
	},
  "repository": {
    "type": "git",
    "url": "git+https://github.com/RobHameetman/eslint-plugin.git"
  },
  "bugs": {
    "url": "https://github.com/RobHameetman/eslint-plugin/issues"
  },
  "scripts": {
    "build": "rm -rf ./bin/ && rollup -c ./rollup.config.js",
    "coverage": "npm test -- --coverage --silent --watchAll=false",
    "format": "NODE_ENV=production eslint ./src --ext=ts,tsx --fix",
    "prepare": "husky install",
    "reset": "rm -rf node_modules/ && npm cache clear --force && [[ -f package-lock.json ]] && npm ci --force || npm i --force",
    "setup": "sh scripts/setup.sh",
    "test": "NODE_ENV=test NODE_OPTIONS=\"$NODE_OPTIONS --experimental-vm-modules\" jest"
  },
  "dependencies": {
    "@eslint/compat": "1.0.3",
    "@eslint/eslintrc": "3.1.0",
    "@eslint/js": "9.15.0",
    "@next/eslint-plugin-next": "14.2.3",
    "@rob.hameetman/type-guards": "1.1.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-import-resolver-typescript": "4.3.5",
    "eslint-plugin-cypress": "4.1.0",
    "eslint-plugin-graphql": "4.0.0",
    "eslint-plugin-import": "2.31.0",
    "eslint-plugin-jest": "28.9.0",
    "eslint-plugin-jest-async": "1.0.3",
    "eslint-plugin-jsx-a11y": "6.10.2",
    "eslint-plugin-no-secrets": "1.1.2",
    "eslint-plugin-no-unsanitized": "4.1.2",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "5.2.1",
    "eslint-plugin-promise": "7.2.1",
    "eslint-plugin-react": "7.37.2",
    "eslint-plugin-react-hooks": "5.0.0",
    "eslint-plugin-security": "3.0.1",
    "eslint-plugin-tailwindcss": "3.17.5",
    "eslint-plugin-testing-library": "7.0.0",
    "esquery": "1.5.0",
    "globals": "15.3.0",
    "jsonschema": "1.4.1",
    "typescript-eslint": "7.11.0"
  },
  "peerDependencies": {
    "eslint": ">= 9.0.0",
    "prettier": ">= 3.0.0"
  },
  "optionalDependencies": {
    "@graphql-eslint/eslint-plugin": "3.20.1",
    "@typescript-eslint/eslint-plugin": "7.11.0",
    "@typescript-eslint/parser": "7.11.0"
  },
  "devDependencies": {
    "@babel/core": "7.24.7",
    "@babel/plugin-syntax-top-level-await": "7.14.5",
    "@babel/preset-env": "7.24.6",
    "@babel/preset-typescript": "7.24.7",
    "@commitlint/config-conventional": "19.2.2",
    "@faker-js/faker": "8.4.1",
    "@rbnlffl/rollup-plugin-eslint": "6.0.0",
    "@rob.hameetman/semantic-release-config": "1.0.0",
    "@rollup/plugin-alias": "5.1.0",
    "@rollup/plugin-commonjs": "25.0.8",
    "@rollup/plugin-eslint": "9.0.5",
    "@rollup/plugin-json": "6.1.0",
    "@rollup/plugin-node-resolve": "15.2.3",
    "@rollup/plugin-terser": "0.4.4",
    "@types/esm": "3.2.2",
    "@types/esquery": "1.5.4",
    "@types/jest": "29.5.12",
    "@types/node": "20.12.12",
    "babel-jest": "29.7.0",
    "babel-plugin-transform-import-meta": "2.2.1",
    "builtin-modules": "4.0.0",
    "commitlint": "19.3.0",
    "husky": "9.0.11",
    "jest": "29.7.0",
    "json-schema-to-ts": "3.1.0",
    "rollup": "4.18.0",
    "rollup-plugin-copy": "3.5.0",
    "rollup-plugin-typescript2": "0.36.0",
    "ts-jest": "29.1.3",
    "ts-loader": "9.5.1",
    "tsx": "4.19.2",
    "typescript": "5.4.5"
  },
  "bundleDependencies": [
    "eslint",
    "estree"
  ],
  "overrides": {
    "eslint": ">= 9.0.0"
  },
  "eslintConfig": {
    "plugins": [
      "./index.cjs"
    ],
    "rules": {
      "import/export": "off",
      "sort-imports": "off",
      "sort-keys": "off"
    }
  },
  "eslintIgnore": [
    "bin"
  ],
  "prettier": {
    "arrowParens": "always",
    "semi": true,
    "trailingComma": "all",
    "singleQuote": true,
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": true,
    "endOfLine": "auto"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ],
      "@babel/preset-typescript"
    ],
    "plugins": [
      "@babel/plugin-syntax-top-level-await",
      "babel-plugin-transform-import-meta"
    ]
  },
  "jest": {
    "roots": [
      "<rootDir>/lib"
    ],
    "collectCoverageFrom": [
      "lib/**/*.ts",
      "!lib/**/*.d.ts"
    ],
    "coverageReporters": [
      "text-summary"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 65,
        "lines": 80,
        "statements": 80
      }
    },
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "moduleFileExtensions": [
      "js",
      "ts",
      "json"
    ],
    "moduleNameMapper": {
      "^@/(.*)": "<rootDir>/lib/$1",
      "^@@/*": "<rootDir>/test/resources/$1",
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "preset": "ts-jest/presets/default-esm",
    "reporters": [
      "default"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/test/jest/config/setupTests.ts"
    ],
    "testEnvironment": "node",
    "testMatch": [
      "<rootDir>/lib/**/*.spec.ts"
    ],
    "transform": {
      "\\.ts$": [
        "ts-jest",
        {
          "tsconfig": "./tsconfig.json",
          "isolatedModules": true,
          "useESM": true
        }
      ],
      "^(?!.*\\.(ts|json)$)": "ts-jest"
    }
  },
  "release": {
    "extends": "@rob.hameetman/semantic-release-config/staged"
  }
}
